<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO PHONE STORE"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/red_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp"/>

    <TextView
        android:id="@+id/tvSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore our products &amp; services"
        android:textSize="13sp"
        android:textColor="@color/text_sub"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:id="@+id/ivWelcome"
        android:layout_width="300dp"
        android:layout_height="300dp"

        android:contentDescription="welcome image"
        android:src="@mipmap/ic_welcom"
        app:layout_constraintTop_toBottomOf="@id/tvSub"
        app:layout_constraintBottom_toTopOf="@id/panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_panel"
        android:layout_marginHorizontal="28dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ĐĂNG NHẬP"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/red_primary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ĐĂNG KÝ"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/red_dark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage phones, invoices and customers easily."
            android:textColor="@color/text_sub"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="14dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>