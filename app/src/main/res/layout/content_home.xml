<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Search -->
        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Search your item here..."
            android:background="@android:drawable/editbox_background"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <!-- Popular Products -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Popular Phones"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvViewAllPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="@color/red_primary"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 1 card demo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone 15 Pro Max"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm giá 10% - Bảo hành 12 tháng"
                android:textColor="#777777"/>
        </LinearLayout>

        <!-- Categories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Explore Brands"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvViewAllBrands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="@color/red_primary"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Brand row demo -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="Samsung"
                    android:backgroundTint="@color/red_primary"
                    android:textColor="@android:color/white" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="iPhone"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/red_primary"
                    android:textColor="@android:color/white" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="Xiaomi"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/red_primary"
                    android:textColor="@android:color/white" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="OPPO"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/red_primary"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>